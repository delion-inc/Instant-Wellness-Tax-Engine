<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="add-tax-fields-to-orders" author="Roman">
        <addColumn tableName="orders">
            <column name="composite_tax_rate" type="DECIMAL(8,6)"/>
            <column name="tax_amount"         type="DECIMAL(14,4)"/>
            <column name="total_amount"       type="DECIMAL(14,4)"/>
            <column name="state_rate"         type="DECIMAL(8,6)"/>
            <column name="county_rate"        type="DECIMAL(8,6)"/>
            <column name="city_rate"          type="DECIMAL(8,6)"/>
            <column name="special_rates"      type="JSONB"/>
            <column name="jurisdictions"      type="JSONB"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
